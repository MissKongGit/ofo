/* pages/my/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background:#f2f2f2;
}
.user-info{
  padding-top:60rpx;
  background: #fff;
}
.user-info .img{
  height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
  margin:30rpx auto 40rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,.2)
}
.user-info .img image{
  width: 100%;
  height: 100%;
  border-radius:50%;
}
.user-info .user-name{
  width: 100%;
  display: block;
  padding:30rpx 0;
  text-align: center
}
.my-wallet{
  padding: 30rpx;
  background: #fff;
  margin-top:40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.login{
  width: 90%;
  position: absolute;
  bottom: 60rpx;
  left:5%;
}